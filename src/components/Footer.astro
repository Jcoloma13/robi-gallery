---

import { instagramUrl, instagramTattooUrl, instagramClothesUrl, email } from '../constants/variables.js';
---



<footer id="contact">
  <div class="footer-container">
    <div class="footer-left">
      <h3>Contacto</h3> 
        <p>Email: <a href={`mailto:${email}`}>{email}</a></p>
        <p>Telefono: +56 999 999 999</p>
    </div>
    <div class="footer-right">
      <h3>Redes Sociales</h3>
      <a href={instagramUrl} target="_blank" rel="noopener noreferrer">
        <img src="/icons/instagram.svg" alt="instagram" class="footer-icon" /> Personal
      </a>
      <a href={instagramTattooUrl} target="_blank" rel="noopener noreferrer">
        <img src="/icons/instagram.svg" alt="instagram" class="footer-icon" /> Tatuaje
      </a>
      <a href={instagramClothesUrl} target="_blank" rel="noopener noreferrer">
        <img src="/icons/instagram.svg" alt="instagram" class="footer-icon" /> Ropa
      </a>
    </div>
  </div>
</footer>

<style>
  footer {
    color: #fff;
    padding: 20px;
    margin-bottom: 20px;
  }

  h3{
    margin-bottom: 20px;
  }

  .footer-container {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    gap: 20px;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
  }

  .footer-right {
    display: flex;
    flex-direction: column;
  }

  .footer-right a {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .footer-icon {
    width: 30px;
    height: 30px;
  }

  a{
    color: #fff;
    text-decoration: none;
  }
  a:hover{
    text-decoration: underline;
  }

</style>